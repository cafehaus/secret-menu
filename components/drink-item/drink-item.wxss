.view-drink {
  display: flex;
  width: 100%;
  padding: 40rpx;
}

.img {
  width: 200rpx;
  height: 200rpx;
}

.content {
  flex: 1;
  margin-left: 30rpx;
}

.title {
  font-size: 18px;
  font-weight: 500;
}

.tag-box {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.tag {
  display: block;
  height: 40rpx;
  border: 1rpx solid #57bc78;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  font-size: 12px;
  color: #57bc78;
  line-height: 40rpx;
}