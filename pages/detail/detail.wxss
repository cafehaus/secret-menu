page {
  background: #f5f7f7;
}

.img {
  width: 100%;
}

.title {
  font-size: 24px;
  font-weight: 500;
  padding: 20rpx 40rpx 0;
}

.tag-box {
  display: flex;
  flex-wrap: wrap;
  padding: 0 40rpx;
}

.tag {
  display: block;
  height: 48rpx;
  border: 1px solid #57bc78;
  border-radius: 16rpx;
  padding: 0 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  font-size: 12px;
  color: #57bc78;
  line-height: 48rpx;
}

.sub-title {
  font-size: 20px;
  font-weight: 500;
  padding: 40rpx 40rpx 0;
}

.recipe {
  padding: 0 40rpx;
}

/* 点单姿势 */

.tips-box {
  padding: 0 40rpx;
  padding-bottom: env(safe-area-inset-bottom);
}

.tips-item .barista {
  display: flex;
  margin-top: 40rpx;
}

.tips-item .barista image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.barista .tip-content {
  padding: 20rpx;
  border-radius: 12rpx;
  background: #fff;
  margin: 0 120rpx 0 40rpx;
  position: relative;
}

.barista .tip-content::before {
  content: '';
  position: absolute;
  top: 24rpx;
  left: -30rpx;
  width: 0;
  height: 0;
  border: 8px solid;
  border-color: transparent #fff transparent transparent;
}

.tips-item .you {
  display: flex;
  justify-content: flex-end;
  margin: 80rpx 0;
}

.tips-item .you image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.you .tip-content {
  padding: 20rpx;
  border-radius: 12rpx;
  background: #57bc78;
  margin: 0 40rpx 0 120rpx;
  position: relative;
  color: #fff;
}

.you .tip-content::before {
  content: '';
  position: absolute;
  top: 24rpx;
  right: -30rpx;
  width: 0;
  height: 0;
  border: 8px solid;
  border-color: transparent transparent transparent #57bc78;
}
